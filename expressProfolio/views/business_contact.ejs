    <%- include('partials/header') %>
    <%- include('partials/banner') %>
    <%- include('partials/navbar') %>
       <h1><%= title %></h1>
       <main>
        <table>
          <thead>
          <tr>
            <th>Contact Name</th>
            <th>Email</th>
            <th>Contact Number</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0;i<contacts.length;i++) {%>
            <tr>
              <td><%= contacts[i].name%></td>
              <td><%= contacts[i].email%></td>
              <td><%= contacts[i].contact_number%></td>
              <td><a href="/update/<%=contacts[i]._id%>"><img id="edit" src="images/edit.png" alt="Edit" width="10%"></a></td>
              <td><a href="/delete/<%=contacts[i]._id%>"><img id="delete" src="images/delete.png" alt="Delete" width="10%"></a></td>
            </tr>
            <% }%>
        </tbody>
        </table>
        <button onclick="location.href='./addBus'">Add New Business Contact</button>
       </main>
     <%- include('partials/footer') %>