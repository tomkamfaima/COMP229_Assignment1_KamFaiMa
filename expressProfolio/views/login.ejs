   <html>
     <head>
       <title><%= title %></title>
       <link rel='stylesheet' href='/stylesheets/style.css' />
     </head>
     <body>
       <div id="allPage">
       <%- include('partials/banner') %>
       <%- include('partials/navbar') %>
       <h1><%= title %></h1>
       <main>
        <form action="/login" method="POST">
          <fieldset>
            <label for="name">Password</label>
            <input type="text" id="name" name="name" required>
          </fieldset>
