   <%- include('partials/header') %>
       <%- include('partials/banner') %>
       <%- include('partials/navbar') %>
       <h1><%= title %></h1>
       <main>
        <form action="/update" method="POST">
          <fieldset>
            <p>
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="<%= user.name %>" required>
          </p>
          <p>
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="<%= user.email %>" readonly class="readOnly">
        </p>
          <p>
              <label for="contact_number">Contact Number</label>
              <input type="text" id="contact_number" name="contact_number" value="<%= user.contact_number %>"  required>
          </p>
          <p>
            <div class="buttonContainer">
            <button class="button" type="submit">Update</button>
            <button class="button" onclick="location.href='/delete/<%= user._id %>'">Delete</button>
          </div>
          </p>
          </form>
          <div class="buttonContainer">
          <button class="button" ><a href="/business_contact">Cancel</a></button>
        </div>
       </main>
     <%- include('partials/footer') %>